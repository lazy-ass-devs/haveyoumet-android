<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_album"
    app:startDestination="@id/albumListFragment">

    <fragment
        android:id="@+id/albumListFragment"
        android:name="com.lazyassevs.haveyoumet.ui.view.album.list.AlbumListFragment"
        android:label="@string/title_screen_album_list"
        tools:layout="@layout/fragment_album_list">
        <action
            android:id="@+id/showAlbumDetail"
            app:destination="@id/albumDetailFragment" />

    </fragment>

    <fragment
        android:id="@+id/albumDetailFragment"
        android:name="com.lazyassevs.haveyoumet.ui.view.album.detail.AlbumDetailFragment"
        android:label="@string/title_screen_album_detail"
        tools:layout="@layout/fragment_album_detail" />

</navigation>